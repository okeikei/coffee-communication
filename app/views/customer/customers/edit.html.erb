<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>プロフィール編集</h2>
  <%= form_with model:@customer, url: customer_update_path, method: :patch, local:true do |f| %>

  <label for="inputName">トップ画像</label>
  <%= f.attachment_field :image %><br>

  <label for="inputName">last_name</label>
  <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"姓"%><br>

  <label for="inputName">first_name</label>
  <%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"名"%><br>

  <label for="inputName">last_name_kana</label>
  <%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"姓カナ"%><br>

  <label for="inputName">first_name_kana</label>
  <%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"名カナ"%><br>

  <label for="inputName">email</label>
  <%= f.text_field :email, autofocus: true, id:"inputName", placeholder:"メールアドレス"%><br>

  <label for="inputName">telephone_number</label>
  <%= f.text_field :telephone_number, autofocus: true, id:"inputName", placeholder:"電話番号"%><br>

  <label for="inputName">introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:"自己紹介"%><br>
  
  <%= f.submit "変更を保存" %><br>
  </div>
</div>
<% end %>