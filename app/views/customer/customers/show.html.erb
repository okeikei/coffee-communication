<div class="">
 <h1>マイページ</h1>
 <div class="text-center">
  <p><%= attachment_image_tag @customer, :image, :fill, 100, 100, class: 'img-fluid customer-img' %></p>
  <table class="table table-bordered">
   <tbody>
     <tr>
       <th scope="row">name</th>
       <td><%= @customer.full_name %></td>
     </tr>
     <tr>
       <th scope="row">name_kana</th>
       <td><%= @customer.full_name_kana %></td>
     </tr>
     <tr>
       <th scope="row">自己紹介</th>
       <td><%= @customer.introduction %></td>
     </tr>
    </tbody>
  </table>

  <% if @customer.paranoia_destroyed? == false %>
  <table class="table table-bordered">
   <tbody>
     <tr>
      <th scope="row"><%= link_to "編集", customer_edit_path(@customer), class: 'nav-link text-dark' %></th>
     </tr>
     <tr>
      <th scope="row"><%= link_to "退会", customer_unsubscribe_path, class: 'nav-link text-dark' %></th>
     </tr>
     <tr>
      <th scope="row"><%= link_to "投稿商品", customer_sell_items_path, class: 'nav-link text-dark' %></th>
     </tr>
    </tbody>
  </table>

  <table class="table table-bordered">
   <tbody>
     <tr>
      <th scope="row"><%= link_to "フォロー", customer_followes_path(@customer), class: 'nav-link text-dark' %></th>
      <td><%= link_to "フォロワー", customer_followers_path(@customer), class: 'nav-link text-dark' %></td>
     </tr>
    </tbody>
  </table>

 <% end %>
 </div>
</div>